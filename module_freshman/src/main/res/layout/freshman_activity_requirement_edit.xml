<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--<include layout="@layout/common_toolbar" />-->
    <include layout="@layout/freshman_layout_top_toolbar"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:text="@string/freshman_string_requirement_memo_title"
        android:textColor="#777777"
        android:textSize="15sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/freshman_requirement_bg" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_requirement_edit"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="39dp"
            android:maxLength="15"
            android:background="@null"
            android:hint="@string/freshman__string_requirement_memo_edit" />
    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>