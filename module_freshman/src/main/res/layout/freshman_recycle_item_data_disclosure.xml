<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="instituteItem"
            type="com.mredrock.cyxbs.freshman.model.campusguide.InstituteData" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_institute"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/freshman_institute_bg"
                android:text="@{instituteItem.name}"
                android:textSize="24sp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_item_institute"
                android:layout_width="19dp"
                android:layout_height="13dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="end|center"
                android:src="@drawable/freshman_institute_arrow"
                />
        </FrameLayout>
    </LinearLayout>
</layout>