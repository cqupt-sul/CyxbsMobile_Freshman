<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/freshman_activity_data_revealed_bg_color"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentTabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="232dp"
            android:background="@drawable/freshman_data_revealed_iv_bg_normal" />

        <com.mredrock.cyxbs.freshman.view.customui.chart.ChartView
            android:id="@+id/cv_subject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </androidx.fragment.app.FragmentTabHost>

</LinearLayout>