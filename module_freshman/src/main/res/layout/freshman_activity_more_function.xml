<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/freshman_activity_data_revealed_bg_color"
    android:orientation="vertical">/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_first"
        android:layout_width="345dp"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/freshman_more_bg"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_left_guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_button_guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重邮2019迎新专题"
                android:textColor="#333333"
                android:textSize="19sp"
                app:layout_constraintBottom_toTopOf="@+id/start_button_guideline1"
                app:layout_constraintStart_toStartOf="@+id/start_left_guideline1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮你造未来"
                android:textColor="#888888"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/start_left_guideline1"
                app:layout_constraintTop_toTopOf="@+id/start_button_guideline1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_more_function_arrow2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/freshman_institute_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:clickable="true"
        android:focusable="true"
        android:layout_width="345dp"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/freshman_more_bg"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_left_guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_button_guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="掌上重邮新功能"
                android:textColor="#333333"
                android:textSize="19sp"
                app:layout_constraintBottom_toTopOf="@+id/start_button_guideline2"
                app:layout_constraintStart_toStartOf="@+id/start_left_guideline2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校车，校历等更多查询功能呢"
                android:textColor="#888888"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/start_left_guideline2"
                app:layout_constraintTop_toTopOf="@+id/start_button_guideline2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_more_function_arrow3"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/freshman_institute_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/ll_third"
        android:layout_width="345dp"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/freshman_more_bg"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_left_guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_button_guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重邮小帮手"
                android:textColor="#333333"
                android:textSize="19sp"
                app:layout_constraintBottom_toTopOf="@+id/start_button_guideline3"
                app:layout_constraintStart_toStartOf="@+id/start_left_guideline3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学长学姐帮帮忙"
                android:textColor="#888888"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/start_left_guideline3"
                app:layout_constraintTop_toTopOf="@+id/start_button_guideline3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_more_function_arrow"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/freshman_institute_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>